<aside
  class="d-flex flex-column flex-shrink-0 p-3 text-white bg-dark sidebar-content pinyon-script-regular collapse"
  style="width: auto;height:100%;"
  id="menu-sidebar"
>
  <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none">
    <span class="fs-4">Menu</span>
  </a>
  <hr>
  <ul class="nav nav-pills flex-column mb-auto text-center fs-4 align-middle">
    <li>
      <a id="collections-menu" class="nav-link text-white"> Collections > </a>
    </li>
    <li>
      <a href="#" class="nav-link text-white"> Orders </a>
    </li>
    <li>
      <a href="#" class="nav-link text-white"> Products </a>
    </li>
    <li>
      <a href="#" class="nav-link text-white"> Customers </a>
    </li>
  </ul>
  <hr>
</aside>
<script>
    document.getElementById('menu-toggle').addEventListener('click', function() {
    const sidebar = document.getElementById('menu-sidebar');
            const submenu = document.getElementById('submenu');
             const collectionsHeader = document.getElementById('collections-menu');

    sidebar.classList.toggle('active'); // Toggle the 'active' class
      if (submenu.classList.contains("active")){
        submenu.classList.toggle('active')
      }
      if (collectionsHeader.classList.contains("active")){
        collectionsHeader.classList.toggle('active')
      }
  });
     document.getElementById('collections-menu').addEventListener('click', function() {
             const submenu = document.getElementById('submenu');
       const collectionsHeader = document.getElementById('collections-menu');
           submenu.classList.toggle('active'); // Toggle the 'active' class
    collectionsHeader.classList.toggle('active'); // Toggle the 'active' class
  });
</script>

