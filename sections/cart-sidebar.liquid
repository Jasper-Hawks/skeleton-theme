{% include 'fetchCartItemsFunctions' %}
<aside
  class="d-flex flex-column flex-shrink-0 p-3 text-white sidebar-content radley-regular collapse"
  style="width: 100%;height:100%;"
  id="cart-sidebar"
>
  <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none">
    <span class="fs-4">Cart</span>
  </a>
  <hr>
  <div id="ajax-cart-sidebar" style="overflow-y:auto; overflow-x:hidden; padding-top:20px; max-height: 500px;"></div>
  <h2 class="radley-regular mt-1">Total: <span id="total-text"></span></h2>
  <form action="{{ routes.cart_url }}" method="post">
    <input
      class="ATCBtn bg-dark border-0 radley-regular"
      type="submit"
      name="checkout"
      value="{{ 'cart.checkout' | t }}"
    >
  </form>
</aside>
<script>
    document.getElementById('cart-toggle').addEventListener('click', function() {
    const sidebar = document.getElementById('cart-sidebar');
      console.log("cart button click")
    sidebar.classList.toggle('active'); // Toggle the 'active' class
  });
</script>

{% schema %}
{
  "name": "cart-sidebar",
  "settings": []
}
{% endschema %}
