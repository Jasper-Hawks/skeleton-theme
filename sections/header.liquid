  }

  .carousel-animation {
      background-color: rgba(0, 0, 0, 0.8);
      transition: 0.5s;
      height: 50%;
  }
  .carousel-animation:hover {
      height: 100%;
      background-color: rgba(0, 0, 0, 1);
      animation-name: height-expand;
      animation-duration: 0.5s;
  }

  @keyframes height-expand {
      from {
          height: 50%;
          background-color: rgba(0, 0, 0, 0.8);
      }
      to {
          height: 100%;
          background-color: rgba(0, 0, 0, 1);
