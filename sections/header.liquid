<header>
  <div style="" class="navbar bg-dark">
    <div class="container-fluid">
      <a class="navbar-brand pinyon-script-regular text-light" href="#">J. Hawks</a>
      <div class="header__menu">
        {% for link in section.settings.menu.links %}
          {{ link.title | link_to: link.url }}
        {% endfor %}
      </div>
      <div class="header__icons">
        {% if shop.customer_accounts_enabled %}
          {{ 'icon-account.svg' | inline_asset_content | link_to: routes.account_url }}
        {% endif %}

        <a href="{{ routes.cart_url }}">
          {% if cart.item_count > 0 %}
            <sup>{{ cart.item_count }}</sup>
          {% endif %}

          {{ 'icon-cart.svg' | inline_asset_content }}
        </a>
      </div>
    </div>
  </div>
</header>

{% stylesheet %}

    header {
    height: 5rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  .navbar{
width:100%;
    position: sticky; 
    top: 0;
    z-index: 5;
  }
  header a {
    position: relative;
    text-decoration: none;
    color: var(--color-foreground);
  }
  header a sup {
    position: absolute;
    left: 100%;
    overflow: hidden;
    max-width: var(--page-margin);
  }
  header svg {
    width: 2rem;
  }
  header .header__menu,
  header .header__icons {
    display: flex;
    gap: 1rem;
    color:white;
  }
  /*
   * Image optimization through a CDN?
   *
   */

  .cover {
      /*   -webkit-filter: grayscale(100%);  Safari 6.0 - 9.0
      filter: grayscale(100%);*/
      z-index: 0;
  }

  /*

  #804E27
  #BF7D3A
  #F7CA79
  #383838
  #F4E1D2

  */
  .overlay {
      background-color: black;
      opacity: 0.5;
      height: 100vh;
      position: absolute;
      width: 100vw;
      top: 0;
      z-index: 1;
  }
.overlay-title {
      color: white;
      z-index: 1;
  }
  .cover-container {
      height: 100vh;
      width: 100vw;
      overflow-x: hidden;
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
      z-index: -6;
      position: absolute;
      top: 0;

      /*   -webkit-filter: grayscale(100%);  Safari 6.0 - 9.0
      filter: grayscale(100%);*/
      z-index: 0;
  }
  .page-content {
      position: relative;
      top: 100vh;
  }
  body {
