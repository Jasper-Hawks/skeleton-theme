{% comment %}
  This section is used in the page template to render store pages like About us
  or Contact us.

  https://shopify.dev/docs/storefronts/themes/architecture/templates/page
{% endcomment %}

<div class="container " style="margin-top:10px;">
  <div class="row">
    <div class="col-md-8 blog-main radley-regular">
      <div class="blog-post ">
        <h2 class="blog-post-title">{{ page.title }}</h2>

        <hr>
        <span class="text-content">
          {{ page.content }}
        </span>
      </div>
      <!-- /.row -->
    </div>
  </div>
</div>
{% stylesheet %}
  #comments .prev{
    position:unset !important;
  }
    .page-container .next:hover{
    background-color:none !important;
      text-decoration:underline !important;
  }
  .page-container .page-current{
    text-decoration: underline !important;
  }
  .page-container .prev:hover{
    background-color:none !important;
    text-decoration:underline !important;
  }
  .page-container .next{
    position: unset !important;
      color:black !important;
    padding: 0;

  }
  .page-container .prev{
    position: unset !important;
      color:black !important;
    padding: 0;

  }

    .text-content{
      a{
            text-decoration: underline !important;
      }
    }
    img{
        display: block;
     margin-left: auto;
     margin-right: auto;
      width:100%;
    }
{% endstylesheet %}

