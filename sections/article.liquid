<div class="container" style="margin-top:10px;">
  <div class="row">
    <div class="col-md-8 blog-main">
      <div class="blog-post radley-regular">
        <h2 class="blog-post-title">{{ article.title }}</h2>
        <p class="blog-post-meta">
          <span>{{ article.updated_at | date: '%B %d, %Y' }}</span>
          <a>{{ article.author }}</a>
        </p>

        <hr>
        {{ article.content }}

        <hr>
        {% if blog.comments_enabled? %}
          <h2>{{ 'blog.article_comments' | t }}</h2>

          <div id="comments">
            {% paginate article.comments by 10 %}
              {% for comment in article.comments %}
                <div>
                  <p>{{ comment.author }}</p>
                  <p>
                    {{- comment.created_at | time_tag: format: 'date' -}}
                  </p>
                  <p>{{ comment.content }}</p>
                </div>
              {% endfor %}

              {{ paginate | default_pagination: anchor: 'comments' }}
            {% endpaginate %}
          </div>

          {% form 'new_comment', article %}
            <hr>
            <h2>{{ 'blog.comment_form_title' | t }}</h2>

            {{ form.errors | default_errors }}

            <div>
              <label for="author">{{ 'blog.comment_form_name' | t }}</label>
              <input
                class="quantity-input"
                type="text"
                placeholder="Name"
                name="comment[author]"
                id="author"
                value="{{ form.author }}"
                required
              >
            </div>

            <div>
              <label for="email">{{ 'blog.comment_form_email' | t }}</label>
              <input
                class="quantity-input"
                type="email"
                name="comment[email]"
                placeholder="Email"
                id="email"
                value="{{ form.email }}"
                required
              >
            </div>

            <div>
              <label for="body">{{ 'blog.comment_form_body' | t }}</label>
              <textarea
                class="quantity-input"
                style="width:100%;"
                name="comment[body]"
                placeholder="Enter Comment"
                id="body"
                required
              >{{ form.body }}</textarea>
            </div>

            <input type="submit" value="{{ 'blog.comment_form_submit' | t }}">
          {% endform %}
        {% endif %}
        <!-- /.blog-sidebar -->
      </div>
      <!-- /.row -->
    </div>
    <div class="col blog-side"></div>
  </div>
</div>
{% stylesheet %}
  img{
      display: block;
   margin-left: auto;
   margin-right: auto;
  }
{% endstylesheet %}
{% schema %}
{
  "name": "t:general.article",
  "settings": []
}
{% endschema %}
