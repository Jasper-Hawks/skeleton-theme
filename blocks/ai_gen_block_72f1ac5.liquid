{% doc %}
  @prompt
    recommended products

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-recommended-products-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding }}px 0;
    background-color: {{ block.settings.background_color }};
  }

  .ai-recommended-products__container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-recommended-products__header-{{ ai_gen_id }} {
    text-align: {{ block.settings.text_alignment }};
    margin-bottom: {{ block.settings.header_spacing }}px;
  }

  .ai-recommended-products__title-{{ ai_gen_id }} {
    color: {{ block.settings.title_color }};
    font-size: {{ block.settings.title_size }}px;
    margin: 0 0 8px;
    font-weight: 600;
  }

  .ai-recommended-products__subtitle-{{ ai_gen_id }} {
    color: {{ block.settings.subtitle_color }};
    font-size: {{ block.settings.subtitle_size }}px;
    margin: 0;
  }

  .ai-recommended-products__grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    gap: {{ block.settings.grid_gap }}px;
  }

  .ai-recommended-products__item-{{ ai_gen_id }} {
    background-color: {{ block.settings.card_background_color }};
    border-radius: {{ block.settings.card_border_radius }}px;
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .ai-recommended-products__item-{{ ai_gen_id }}:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
  }

  .ai-recommended-products__image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    aspect-ratio: {{ block.settings.image_aspect_ratio }};
    overflow: hidden;
  }

  .ai-recommended-products__image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .ai-recommended-products__item-{{ ai_gen_id }}:hover .ai-recommended-products__image-{{ ai_gen_id }} {
    transform: scale(1.05);
  }

  .ai-recommended-products__image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-recommended-products__image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    color: #ccc;
  }

  .ai-recommended-products__empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 10px;
    left: 50%;
    transform: translateX(-50%);
    font-size: 12px;
    color: #999;
    text-align: center;
    pointer-events: none;
  }

  .ai-recommended-products__content-{{ ai_gen_id }} {
    padding: {{ block.settings.card_padding }}px;
  }

  .ai-recommended-products__product-title-{{ ai_gen_id }} {
    color: {{ block.settings.product_title_color }};
    font-size: {{ block.settings.product_title_size }}px;
    margin: 0 0 8px;
    font-weight: 500;
    line-height: 1.3;
  }

  .ai-recommended-products__product-title-{{ ai_gen_id }} a {
    color: inherit;
    text-decoration: none;
  }

  .ai-recommended-products__product-title-{{ ai_gen_id }} a:hover {
    text-decoration: underline;
  }

  .ai-recommended-products__price-{{ ai_gen_id }} {
    color: {{ block.settings.price_color }};
    font-size: {{ block.settings.price_size }}px;
    font-weight: 600;
    margin-bottom: 12px;
  }

  .ai-recommended-products__price-compare-{{ ai_gen_id }} {
    color: #999;
    text-decoration: line-through;
    margin-right: 8px;
  }

  .ai-recommended-products__button-{{ ai_gen_id }} {
    width: 100%;
    padding: 12px 16px;
    background-color: {{ block.settings.button_color }};
    color: {{ block.settings.button_text_color }};
    border: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: 14px;
    font-weight: 500;
    cursor: pointer;
    transition: background-color 0.3s ease;
    text-decoration: none;
    display: inline-block;
    text-align: center;
  }

  .ai-recommended-products__button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
  }

  .ai-recommended-products__empty-products-{{ ai_gen_id }} {
    text-align: center;
    padding: 60px 20px;
    color: #666;
  }

  .ai-recommended-products__empty-products-{{ ai_gen_id }} h3 {
    margin: 0 0 8px;
    font-size: 18px;
  }

  .ai-recommended-products__empty-products-{{ ai_gen_id }} p {
    margin: 0;
    font-size: 14px;
  }

  @media screen and (max-width: 768px) {
    .ai-recommended-products__grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
      gap: {{ block.settings.grid_gap | times: 0.75 }}px;
    }

    .ai-recommended-products__title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.85 }}px;
    }

    .ai-recommended-products__subtitle-{{ ai_gen_id }} {
      font-size: {{ block.settings.subtitle_size | times: 0.9 }}px;
    }
  }

  @media screen and (max-width: 480px) {
    .ai-recommended-products__grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
    }
  }
{% endstyle %}

<div class="ai-recommended-products-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-recommended-products__container-{{ ai_gen_id }}">
    {% if block.settings.title != blank or block.settings.subtitle != blank %}
      <div class="ai-recommended-products__header-{{ ai_gen_id }}">
        {% if block.settings.title != blank %}
          <h2 class="ai-recommended-products__title-{{ ai_gen_id }}">{{ block.settings.title }}</h2>
        {% endif %}
        {% if block.settings.subtitle != blank %}
          <p class="ai-recommended-products__subtitle-{{ ai_gen_id }}">{{ block.settings.subtitle }}</p>
        {% endif %}
      </div>
    {% endif %}

    {% if block.settings.product_list != blank %}
      <div class="ai-recommended-products__grid-{{ ai_gen_id }}">
        {% for product in block.settings.product_list limit: block.settings.products_to_show %}
          <div class="ai-recommended-products__item-{{ ai_gen_id }}">
            <div class="ai-recommended-products__image-wrapper-{{ ai_gen_id }}">
              {% if product.featured_image %}
                <img
                  src="{{ product.featured_image | image_url: width: 600 }}"
                  alt="{{ product.featured_image.alt | escape }}"
                  class="ai-recommended-products__image-{{ ai_gen_id }}"
                  loading="lazy"
                  width="600"
                  height="{{ 600 | divided_by: product.featured_image.aspect_ratio | round }}"
                >
              {% else %}
                <div class="ai-recommended-products__image-placeholder-{{ ai_gen_id }}">
                  {{ 'product-1' | placeholder_svg_tag }}
                </div>
              {% endif %}
            </div>

            <div class="ai-recommended-products__content-{{ ai_gen_id }}">
              <h3 class="ai-recommended-products__product-title-{{ ai_gen_id }}">
                <a href="{{ product.url }}">{{ product.title }}</a>
              </h3>

              <div class="ai-recommended-products__price-{{ ai_gen_id }}">
                {% if product.compare_at_price > product.price %}
                  <span class="ai-recommended-products__price-compare-{{ ai_gen_id }}">
                    {{ product.compare_at_price | money }}
                  </span>
                {% endif %}
                {{ product.price | money }}
              </div>

              {% if block.settings.show_add_to_cart %}
                {% if product.available %}
                  <a href="{{ product.url }}" class="ai-recommended-products__button-{{ ai_gen_id }}">
                    {{ block.settings.button_text }}
                  </a>
                {% else %}
                  <button class="ai-recommended-products__button-{{ ai_gen_id }}" disabled>
                    {{ block.settings.sold_out_text }}
                  </button>
                {% endif %}
              {% endif %}
            </div>
          </div>
        {% endfor %}
      </div>
    {% else %}
      <div class="ai-recommended-products__empty-products-{{ ai_gen_id }}">
        <h3>No products selected</h3>
        <p>Add products to display your recommendations</p>
      </div>
    {% endif %}
  </div>
</div>

