{% doc %}
  @prompt
    Create a block detailing our shipping and return policy that will be applicable to every product. Emphasize our free shipping and flat rate shipping and 90 day return policy, Make it full width and centered. Don't use a grid to align the element

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-shipping-policy-{{ ai_gen_id }} {
    width: 100%;
    padding: {{ block.settings.padding }}px;
    background-color: {{ block.settings.background_color }};
    border-radius: {{ block.settings.border_radius }}px;
    border: {{ block.settings.border_width }}px solid {{ block.settings.border_color }};
  }

  .ai-shipping-policy__content-{{ ai_gen_id }} {
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
    width: 100%;
  }

  .ai-shipping-policy__title-{{ ai_gen_id }} {
    color: {{ block.settings.title_color }};
    font-size: {{ block.settings.title_size }}px;
    font-weight: 600;
    margin: 0 0 {{ block.settings.section_spacing }}px 0;
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-shipping-policy__sections-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.section_spacing }}px;
    align-items: center;
  }

  .ai-shipping-policy__section-{{ ai_gen_id }} {
    display: flex;
    align-items: flex-start;
    gap: 16px;
    width: 100%;
    max-width: 600px;
  }

  .ai-shipping-policy__icon-{{ ai_gen_id }} {
    flex-shrink: 0;
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    background-color: {{ block.settings.icon_background_color }};
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: {{ block.settings.icon_color }};
  }

  .ai-shipping-policy__icon-{{ ai_gen_id }} svg {
    width: calc({{ block.settings.icon_size }}px * 0.6);
    height: calc({{ block.settings.icon_size }}px * 0.6);
  }

  .ai-shipping-policy__text-content-{{ ai_gen_id }} {
    flex-grow: 1;
  }

  .ai-shipping-policy__section-title-{{ ai_gen_id }} {
    color: {{ block.settings.section_title_color }};
    font-size: {{ block.settings.section_title_size }}px;
    font-weight: 600;
    margin: 0 0 8px 0;
  }

  .ai-shipping-policy__section-description-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.text_size }}px;
    line-height: 1.5;
    margin: 0;
  }

  .ai-shipping-policy__highlight-{{ ai_gen_id }} {
    color: {{ block.settings.highlight_color }};
    font-weight: 600;
  }

  @media screen and (max-width: 749px) {
    .ai-shipping-policy__sections-{{ ai_gen_id }} {
      gap: {{ block.settings.section_spacing | times: 0.8 }}px;
    }

    .ai-shipping-policy__section-{{ ai_gen_id }} {
      gap: 12px;
    }

    .ai-shipping-policy__icon-{{ ai_gen_id }} {
      width: {{ block.settings.icon_size | times: 0.8 }}px;
      height: {{ block.settings.icon_size | times: 0.8 }}px;
    }

    .ai-shipping-policy__icon-{{ ai_gen_id }} svg {
      width: calc({{ block.settings.icon_size | times: 0.8 }}px * 0.6);
      height: calc({{ block.settings.icon_size | times: 0.8 }}px * 0.6);
    }
  }
{% endstyle %}

<div
  class="ai-shipping-policy-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-shipping-policy__content-{{ ai_gen_id }}">
    {% if block.settings.title != blank %}
      <h2 class="ai-shipping-policy__title-{{ ai_gen_id }}">{{ block.settings.title }}</h2>
    {% endif %}

    <div class="ai-shipping-policy__sections-{{ ai_gen_id }}">
      {% if block.settings.show_free_shipping %}
        <div class="ai-shipping-policy__section-{{ ai_gen_id }}">
          <div class="ai-shipping-policy__icon-{{ ai_gen_id }}">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="m3 9 9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/>
              <polyline points="9,22 9,12 15,12 15,22"/>
            </svg>
          </div>
          <div class="ai-shipping-policy__text-content-{{ ai_gen_id }}">
            <h3 class="ai-shipping-policy__section-title-{{ ai_gen_id }}">{{ block.settings.free_shipping_title }}</h3>
            <p class="ai-shipping-policy__section-description-{{ ai_gen_id }}">
              {{ block.settings.free_shipping_description }}
              {% if block.settings.free_shipping_threshold != blank %}
                <span class="ai-shipping-policy__highlight-{{ ai_gen_id }}">{{ block.settings.free_shipping_threshold }}</span>
              {% endif %}
            </p>
          </div>
        </div>
      {% endif %}

      {% if block.settings.show_flat_rate %}
        <div class="ai-shipping-policy__section-{{ ai_gen_id }}">
          <div class="ai-shipping-policy__icon-{{ ai_gen_id }}">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <rect width="20" height="8" x="2" y="14" rx="2" ry="2"/>
              <rect width="20" height="8" x="2" y="2" rx="2" ry="2"/>
              <path d="M6 18h2"/>
              <path d="M6 6h2"/>
            </svg>
          </div>
          <div class="ai-shipping-policy__text-content-{{ ai_gen_id }}">
            <h3 class="ai-shipping-policy__section-title-{{ ai_gen_id }}">{{ block.settings.flat_rate_title }}</h3>
            <p class="ai-shipping-policy__section-description-{{ ai_gen_id }}">
              {{ block.settings.flat_rate_description }}
              {% if block.settings.flat_rate_price != blank %}
                <span class="ai-shipping-policy__highlight-{{ ai_gen_id }}">{{ block.settings.flat_rate_price }}</span>
              {% endif %}
            </p>
          </div>
        </div>
      {% endif %}

      {% if block.settings.show_return_policy %}
        <div class="ai-shipping-policy__section-{{ ai_gen_id }}">
          <div class="ai-shipping-policy__icon-{{ ai_gen_id }}">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M3 12a9 9 0 1 0 9-9 9.75 9.75 0 0 0-6.74 2.74L3 8"/>
              <path d="M3 3v5h5"/>
            </svg>
          </div>
          <div class="ai-shipping-policy__text-content-{{ ai_gen_id }}">
            <h3 class="ai-shipping-policy__section-title-{{ ai_gen_id }}">{{ block.settings.return_policy_title }}</h3>
            <p class="ai-shipping-policy__section-description-{{ ai_gen_id }}">
              {{ block.settings.return_policy_description }}
              {% if block.settings.return_period != blank %}
                <span class="ai-shipping-policy__highlight-{{ ai_gen_id }}">{{ block.settings.return_period }}</span>
              {% endif %}
            </p>
          </div>
        </div>
      {% endif %}

      {% if block.settings.show_processing_time %}
        <div class="ai-shipping-policy__section-{{ ai_gen_id }}">
          <div class="ai-shipping-policy__icon-{{ ai_gen_id }}">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <circle cx="12" cy="12" r="10"/>
              <polyline points="12,6 12,12 16,14"/>
            </svg>
          </div>
          <div class="ai-shipping-policy__text-content-{{ ai_gen_id }}">
            <h3 class="ai-shipping-policy__section-title-{{ ai_gen_id }}">{{ block.settings.processing_time_title }}</h3>
            <p class="ai-shipping-policy__section-description-{{ ai_gen_id }}">
              {{ block.settings.processing_time_description }}
              {% if block.settings.processing_duration != blank %}
                <span class="ai-shipping-policy__highlight-{{ ai_gen_id }}">{{ block.settings.processing_duration }}</span>
              {% endif %}
            </p>
          </div>
        </div>
      {% endif %}
    </div>
  </div>
</div>

