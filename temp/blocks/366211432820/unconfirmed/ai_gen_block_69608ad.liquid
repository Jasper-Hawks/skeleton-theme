{% endstyle %}

<related-products-{{ ai_gen_id }}
  class="ai-related-products-{{ ai_gen_id }}"
  data-product-id="{{ product.id }}"
  data-use-search-discovery="{{ block.settings.use_search_discovery }}"
  data-intent="{{ block.settings.recommendation_intent }}"
  data-auto-scroll="{{ block.settings.auto_scroll }}"
  data-scroll-speed="{{ block.settings.scroll_speed }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-related-products__container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h2 class="ai-related-products__heading-{{ ai_gen_id }}">
        {{ block.settings.heading }}
      </h2>
    {% endif %}

    <div class="ai-related-products__scroll-container-{{ ai_gen_id }}">
      <div class="ai-related-products__grid-{{ ai_gen_id }}" id="related-products-grid-{{ ai_gen_id }}">
        <div class="ai-related-products__loading-{{ ai_gen_id }}">
          Loading related products...
        </div>
      </div>
    </div>

    <div class="ai-related-products__controls-{{ ai_gen_id }}" id="related-products-controls-{{ ai_gen_id }}" style="display: none;">
      <button class="ai-related-products__auto-scroll-toggle-{{ ai_gen_id }}" id="auto-scroll-toggle-{{ ai_gen_id }}">
        Pause Auto-scroll
      </button>
      <div class="ai-related-products__indicators-{{ ai_gen_id }}" id="scroll-indicators-{{ ai_gen_id }}"></div>
    </div>
  </div>
</related-products-{{ ai_gen_id }}>

<script>
  (function() {
    class RelatedProducts{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.productId = this.dataset.productId;
        this.useSearchDiscovery = this.dataset.useSearchDiscovery === 'true';
        this.intent = this.dataset.intent;
        this.autoScroll = this.dataset.autoScroll === 'true';
        this.scrollSpeed = parseInt(this.dataset.scrollSpeed) * 1000;
        this.grid = this.querySelector('#related-products-grid-{{ ai_gen_id }}');
        this.controls = this.querySelector('#related-products-controls-{{ ai_gen_id }}');
        this.toggleButton = this.querySelector('#auto-scroll-toggle-{{ ai_gen_id }}');
        this.indicators = this.querySelector('#scroll-indicators-{{ ai_gen_id }}');
        this.products = [];
        this.currentIndex = 0;
        this.isScrolling = false;
        this.scrollInterval = null;
        this.itemWidth = {{ block.settings.item_width }};
        this.gap = {{ block.settings.grid_gap }};
      }

      connectedCallback() {
        this.fetchRelatedProducts();
        this.setupEventListeners();
      }

      disconnectedCallback() {
        this.stopAutoScroll();
      }

      setupEventListeners() {
        if (this.toggleButton) {
          this.toggleButton.addEventListener('click', () => {
            this.toggleAutoScroll();
          });
        }

        this.grid.addEventListener('mouseenter', () => {
          if (this.autoScroll && this.scrollInterval) {
            this.pauseAutoScroll();
          }
        });

        this.grid.addEventListener('mouseleave', () => {
          if (this.autoScroll && !this.scrollInterval) {
            this.startAutoScroll();
          }
        });
      }

      async fetchRelatedProducts() {
        if (this.useSearchDiscovery) {
          await this.fetchFromSearchDiscovery();
        } else {
          await this.fetchFromProductRecommendations();
        }
      }

      async fetchFromSearchDiscovery() {
        try {
          const url = `/recommendations/products.json?product_id=${this.productId}&limit=5&intent=${this.intent}`;
          const response = await fetch(url);
          
          if (!response.ok) {
            throw new Error('Search & Discovery API not available');
          }
          
          const data = await response.json();
          
          if (data.products && data.products.length > 0) {
            this.products = data.products;
            this.renderProducts();
          } else {
            await this.fetchFallbackProducts();
          }
        } catch (error) {
          console.warn('Search & Discovery unavailable, falling back to product recommendations:', error);
          await this.fetchFromProductRecommendations();
        }
      }

      async fetchFromProductRecommendations() {
        try {
          const url = `/recommendations/products.json?product_id=${this.productId}&limit=5`;
          const response = await fetch(url);
          const data = await response.json();
          
          if (data.products && data.products.length > 0) {
            this.products = data.products;
            this.renderProducts();
          } else {
            await this.fetchFallbackProducts();
          }
        } catch (error) {
          console.error('Product recommendations failed:', error);
          await this.fetchFallbackProducts();
        }
      }

      async fetchFallbackProducts() {
        try {
          const response = await fetch('/products.json?limit=10');
          const data = await response.json();
          
          let products = data.products.filter(product => 
            product.id.toString() !== this.productId
          );
          
          this.products = products.slice(0, 5);
          
          if (this.products.length > 0) {
            this.renderProducts();
          } else {
            this.renderEmptyState();
          }
        } catch (error) {
          console.error('Fallback products failed:', error);
          this.renderEmptyState();
        }
      }

      renderProducts() {
        if (this.products.length === 0) {
          this.renderEmptyState();
          return;
        }

        const duplicatedProducts = [...this.products, ...this.products];

        this.grid.innerHTML = duplicatedProducts.map(product => {
          const image = product.featured_image || (product.images && product.images[0]);
          const variant = product.variants ? product.variants[0] : product;
          const price = this.formatMoney(variant.price);
          const comparePrice = variant.compare_at_price ? 
            this.formatMoney(variant.compare_at_price) : null;

          return `
            <a href="/products/${product.handle}" class="ai-related-products__item-{{ ai_gen_id }}">
              <div class="ai-related-products__image-wrapper-{{ ai_gen_id }}">
                ${image ? 
                  `<img 
                    src="${image}?width=400" 
                    alt="${this.escapeHtml(product.title)}"
                    class="ai-related-products__image-{{ ai_gen_id }}"
                    loading="lazy"
                    width="400"
                    height="400"
                  >` :
                  `<div class="ai-related-products__image-placeholder-{{ ai_gen_id }}">
                    ${'{{ "product-1" | placeholder_svg_tag }}'}
                  </div>`
                }
              </div>
              <div class="ai-related-products__content-{{ ai_gen_id }}">
                ${product.vendor ? `<div class="ai-related-products__vendor-{{ ai_gen_id }}">${this.escapeHtml(product.vendor)}</div>` : ''}
                <div class="ai-related-products__title-{{ ai_gen_id }}">
                  ${this.escapeHtml(product.title)}
                </div>
                <div class="ai-related-products__price-{{ ai_gen_id }}">
                  ${comparePrice ? `<span class="ai-related-products__price-compare-{{ ai_gen_id }}">${comparePrice}</span>` : ''}
                  ${price}
                </div>
              </div>
            </a>
          `;
        }).join('');

        this.setupScrolling();
        this.createIndicators();
        this.controls.style.display = 'flex';

        if (this.autoScroll) {
          this.startAutoScroll();
        }
      }

      setupScrolling() {
        this.maxScroll = this.products.length * (this.itemWidth + this.gap);
      }

      createIndicators() {
        this.indicators.innerHTML = this.products.map((_, index) => 
          `<div class="ai-related-products__indicator-{{ ai_gen_id }} ${index === 0 ? 'active' : ''}" data-index="${index}"></div>`
        ).join('');

        this.indicators.addEventListener('click', (e) => {
          const indicator = e.target.closest('.ai-related-products__indicator-{{ ai_gen_id }}');
          if (indicator) {
            const index = parseInt(indicator.dataset.index);
            this.scrollToIndex(index);
          }
        });
      }

      scrollToIndex(index) {
        this.currentIndex = index;
        const scrollPosition = index * (this.itemWidth + this.gap);
        this.grid.style.transform = `translateX(-${scrollPosition}px)`;
        this.updateIndicators();
      }

      updateIndicators() {
        const indicators = this.indicators.querySelectorAll('.ai-related-products__indicator-{{ ai_gen_id }}');
        indicators.forEach((indicator, index) => {
          indicator.classList.toggle('active', index === this.currentIndex);
        });
      }

      startAutoScroll() {
        if (this.products.length <= 1) return;
        
        this.scrollInterval = setInterval(() => {
          this.scrollToNext();
        }, this.scrollSpeed);
      }

      pauseAutoScroll() {
        if (this.scrollInterval) {
          clearInterval(this.scrollInterval);
          this.scrollInterval = null;
        }
      }

      stopAutoScroll() {
        this.pauseAutoScroll();
        this.autoScroll = false;
        if (this.toggleButton) {
          this.toggleButton.textContent = 'Start Auto-scroll';
        }
      }

      toggleAutoScroll() {
        this.autoScroll = !this.autoScroll;
        
        if (this.autoScroll) {
          this.startAutoScroll();
          this.toggleButton.textContent = 'Pause Auto-scroll';
        } else {
          this.stopAutoScroll();
        }
      }

      scrollToNext() {
        this.currentIndex = (this.currentIndex + 1) % this.products.length;
        
        if (this.currentIndex === 0) {
          this.grid.style.transition = 'none';
          this.grid.style.transform = `translateX(-${this.maxScroll}px)`;
          
          setTimeout(() => {
            this.grid.style.transition = 'transform 0.5s ease';
            this.scrollToIndex(0);
          }, 50);
        } else {
          this.scrollToIndex(this.currentIndex);
        }
      }

      renderEmptyState() {
        this.grid.innerHTML = `
          <div class="ai-related-products__empty-{{ ai_gen_id }}">
            <div class="ai-related-products__empty-title-{{ ai_gen_id }}">
              No related products found
            </div>
            <div class="ai-related-products__empty-text-{{ ai_gen_id }}">
              Check back later for product recommendations
            </div>
          </div>
        `;
      }

      formatMoney(cents) {
        return (cents / 100).toLocaleString('en-US', {
          style: 'currency',
          currency: 'USD'
        });
      }

      escapeHtml(text) {
        const div = document.createElement('div');
        div.textContent = text;
        return div.innerHTML;
      }
    }

    customElements.define('related-products-{{ ai_gen_id }}', RelatedProducts{{ ai_gen_id }});
  })();
</script>

