{% doc %}
  @prompt
    Make a horizontally centered block with the heading related products. Add a header "Related Items", Add the class "container" to the block, Center the block, Now connect it to Shopify's "Search and Discovery" App. Display related products

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-related-products-{{ ai_gen_id }} {
    width: 100%;
    text-align: center;
    padding: {{ block.settings.section_padding }}px 20px;
    background-color: {{ block.settings.background_color }};
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }

  .ai-related-products-header-{{ ai_gen_id }} {
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
    font-weight: 600;
    margin: 0 0 {{ block.settings.spacing_below_heading }}px;
    font-family: {{ block.settings.heading_font.family }}, {{ block.settings.heading_font.fallback_families }};
    font-weight: {{ block.settings.heading_font.weight }};
    font-style: {{ block.settings.heading_font.style }};
    text-align: center;
  }

  .ai-related-products-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: {{ block.settings.product_spacing }}px;
    justify-content: center;
  }

  .ai-related-product-card-{{ ai_gen_id }} {
    background-color: {{ block.settings.card_background_color }};
    border-radius: {{ block.settings.card_border_radius }}px;
    padding: {{ block.settings.card_padding }}px;
    text-align: center;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    margin: 0 auto;
  }

  .ai-related-product-card-{{ ai_gen_id }}:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
  }

  .ai-related-product-image-{{ ai_gen_id }} {
    width: 100%;
    margin-bottom: 16px;
    border-radius: {{ block.settings.image_border_radius }}px;
    overflow: hidden;
  }

  .ai-related-product-image-{{ ai_gen_id }} img {
    width: 100%;
    height: 200px;
    object-fit: cover;
    display: block;
  }

  .ai-related-product-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 200px;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: {{ block.settings.image_border_radius }}px;
  }

  .ai-related-product-image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.5;
  }

  .ai-related-product-title-{{ ai_gen_id }} {
    color: {{ block.settings.product_title_color }};
    font-size: {{ block.settings.product_title_size }}px;
    font-weight: 500;
    margin: 0 0 8px;
    text-decoration: none;
    display: block;
    text-align: center;
  }

  .ai-related-product-title-{{ ai_gen_id }}:hover {
    text-decoration: underline;
  }

  .ai-related-product-price-{{ ai_gen_id }} {
    color: {{ block.settings.product_price_color }};
    font-size: {{ block.settings.product_price_size }}px;
    font-weight: 600;
    margin: 0;
    text-align: center;
  }

  .ai-related-products-empty-state-{{ ai_gen_id }} {
    text-align: center;
    padding: 40px 20px;
    color: #666;
    font-style: italic;
    margin: 0 auto;
  }

  @media screen and (max-width: 749px) {
    .ai-related-products-container-{{ ai_gen_id }} {
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: {{ block.settings.product_spacing | times: 0.75 }}px;
    }

    .ai-related-products-header-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.85 }}px;
    }
  }
{% endstyle %}

<div class="ai-related-products-{{ ai_gen_id }} container" {{ block.shopify_attributes }}>
  <h2 class="ai-related-products-header-{{ ai_gen_id }}">{{ block.settings.heading_text }}</h2>
  
  {% liquid
    assign related_products = product.related_products | default: recommendations.products
    assign products_to_display = related_products | slice: 0, block.settings.products_to_show
  %}
  
  {% if products_to_display.size > 0 %}
    <div class="ai-related-products-container-{{ ai_gen_id }}">
      {% for related_product in products_to_display %}
        <div class="ai-related-product-card-{{ ai_gen_id }}">
          <div class="ai-related-product-image-{{ ai_gen_id }}">
            {% if related_product.featured_image %}
              <a href="{{ related_product.url }}">
                <img
                  src="{{ related_product.featured_image | image_url: width: 400 }}"
                  alt="{{ related_product.featured_image.alt | escape }}"
                  loading="lazy"
                  width="400"
                  height="400"
                >
              </a>
            {% else %}
              <div class="ai-related-product-image-placeholder-{{ ai_gen_id }}">
                {{ 'product-apparel-1' | placeholder_svg_tag }}
              </div>
            {% endif %}
          </div>
          
          <a href="{{ related_product.url }}" class="ai-related-product-title-{{ ai_gen_id }}">
            {{ related_product.title }}
          </a>
          
          <div class="ai-related-product-price-{{ ai_gen_id }}">
            {% if related_product.compare_at_price > related_product.price %}
              <span style="text-decoration: line-through; opacity: 0.7; margin-right: 8px;">
                {{ related_product.compare_at_price | money }}
              </span>
            {% endif %}
            {{ related_product.price | money }}
          </div>
        </div>
      {% endfor %}
    </div>
  {% else %}
    <div class="ai-related-products-empty-state-{{ ai_gen_id }}">
      {% if block.settings.fallback_collection != blank %}
        {% assign fallback_products = block.settings.fallback_collection.products | slice: 0, block.settings.products_to_show %}
        {% if fallback_products.size > 0 %}
          <div class="ai-related-products-container-{{ ai_gen_id }}">
            {% for fallback_product in fallback_products %}
              <div class="ai-related-product-card-{{ ai_gen_id }}">
                <div class="ai-related-product-image-{{ ai_gen_id }}">
                  {% if fallback_product.featured_image %}
                    <a href="{{ fallback_product.url }}">
                      <img
                        src="{{ fallback_product.featured_image | image_url: width: 400 }}"
                        alt="{{ fallback_product.featured_image.alt | escape }}"
                        loading="lazy"
                        width="400"
                        height="400"
                      >
                    </a>
                  {% else %}
                    <div class="ai-related-product-image-placeholder-{{ ai_gen_id }}">
                      {{ 'product-apparel-1' | placeholder_svg_tag }}
                    </div>
                  {% endif %}
                </div>
                
                <a href="{{ fallback_product.url }}" class="ai-related-product-title-{{ ai_gen_id }}">
                  {{ fallback_product.title }}
                </a>
                
                <div class="ai-related-product-price-{{ ai_gen_id }}">
                  {% if fallback_product.compare_at_price > fallback_product.price %}
                    <span style="text-decoration: line-through; opacity: 0.7; margin-right: 8px;">
                      {{ fallback_product.compare_at_price | money }}
                    </span>
                  {% endif %}
                  {{ fallback_product.price | money }}
                </div>
              </div>
            {% endfor %}
          </div>
        {% else %}
          No related products found. Configure the Search & Discovery app or select a fallback collection.
        {% endif %}
      {% else %}
        No related products found. Configure the Search & Discovery app or select a fallback collection.
      {% endif %}
    </div>
  {% endif %}
</div>

<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "ItemList",
  "name": "{{ block.settings.heading_text | escape }}",
  "numberOfItems": {{ products_to_display.size | default: 0 }},
  "itemListElement": [
    {% for related_product in products_to_display %}
      {
        "@type": "Product",
        "position": {{ forloop.index }},
        "name": "{{ related_product.title | escape }}",
        "url": "{{ shop.url }}{{ related_product.url }}",
        "image": "{{ related_product.featured_image | image_url: width: 400 }}",
        "offers": {
          "@type": "Offer",
          "price": "{{ related_product.price | money_without_currency }}",
          "priceCurrency": "{{ cart.currency.iso_code }}",
          "availability": "{% if related_product.available %}https://schema.org/InStock{% else %}https://schema.org/OutOfStock{% endif %}"
        }
      }{% unless forloop.last %},{% endunless %}
    {% endfor %}
  ]
}
</script>

